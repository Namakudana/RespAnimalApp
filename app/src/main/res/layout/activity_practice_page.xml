<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/img_backgroud"
    tools:context=".PracticePageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:importantForAccessibility="no"
            android:src="@drawable/btn_back" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/quizIcon"
        android:layout_width="259dp"
        android:layout_height="111dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_quiz_icon" />
    <TextView
        android:id="@+id/chooseTopic"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:text="Ketuk tombol dibawah untuk memulai latihan"
        android:fontFamily="@font/Cherry_Bird_Demo"
        android:textColor="#99FFFFFF" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_back_green"
        android:fontFamily="@font/Cherry_Bird_Demo"
        android:text="Mulai"
        android:textColor="@color/white" />
</LinearLayout>